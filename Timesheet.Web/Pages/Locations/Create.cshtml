@page
@model Timesheet.Web.Pages.Locations.CreateModel

@{
  ViewData["Title"] = "Create";
  Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Locatii</h1>
<hr />

<div class="row">
  <div class="col-md-4">
    <form method="post">
      <div asp-validation-summary="ModelOnly" class="text-danger"></div>
      <div class="form-group mb-2">
        <label asp-for="Location.Clientid" class="control-label"></label>
        <select asp-for="Location.Clientid" class="form-control" asp-items="ViewBag.Clientid"></select>
        <span asp-validation-for="Location.Clientid" class="text-danger"></span>
      </div>
      <div class="form-group mb-2">
        <label asp-for="Location.Name" class="control-label"></label>
        <input asp-for="Location.Name" class="form-control" />
        <span asp-validation-for="Location.Name" class="text-danger"></span>
      </div>
      <div class="form-group mb-2">
        <label asp-for="Location.StreetName" class="control-label"></label>
        <input asp-for="Location.StreetName" class="form-control" />
        <span asp-validation-for="Location.StreetName" class="text-danger"></span>
      </div>
      <div class="form-group mb-2">
        <label asp-for="Location.SteetNumber" class="control-label"></label>
        <input asp-for="Location.SteetNumber" class="form-control" />
        <span asp-validation-for="Location.SteetNumber" class="text-danger"></span>
      </div>
      <div class="form-group mb-2">
        <label asp-for="Location.SteetCode" class="control-label"></label>
        <input asp-for="Location.SteetCode" class="form-control" />
        <span asp-validation-for="Location.SteetCode" class="text-danger"></span>
      </div>
      <div class="form-group mb-2">
        <label asp-for="Location.Building" class="control-label"></label>
        <input asp-for="Location.Building" class="form-control" />
        <span asp-validation-for="Location.Building" class="text-danger"></span>
      </div>
      <div class="form-group mb-2">
        <label asp-for="Location.City" class="control-label"></label>
        <input asp-for="Location.City" class="form-control" />
        <span asp-validation-for="Location.City" class="text-danger"></span>
      </div>
      <div class="form-group mb-2">
        <label asp-for="Location.County" class="control-label"></label>
        <input asp-for="Location.County" class="form-control" />
        <span asp-validation-for="Location.County" class="text-danger"></span>
      </div>
      <div class="form-group mb-2">
        <label asp-for="Location.Country" class="control-label"></label>
        <input asp-for="Location.Country" class="form-control" />
        <span asp-validation-for="Location.Country" class="text-danger"></span>
      </div>
      <div class="form-group">
        <input type="submit" value="Salveaza locatie" class="btn btn-sm btn-primary" />
      </div>
    </form>
  </div>
</div>

@section Scripts {
  @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
  }
}
