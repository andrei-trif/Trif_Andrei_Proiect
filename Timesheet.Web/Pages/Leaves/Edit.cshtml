@page
@model Timesheet.Web.Pages.Leaves.EditModel

@{
  ViewData["Title"] = "Edit";
  Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Concediu</h1>
<hr />

<div class="row">
  <div class="col-md-4">
    <form method="post">
      <div asp-validation-summary="ModelOnly" class="text-danger"></div>
      <input type="hidden" asp-for="Leave.Id" />
      <input type="hidden" asp-for="Leave.EmployeeId" />
      <div class="form-group mb-2">
        <label asp-for="Leave.LeaveType" class="control-label"></label>
        <select asp-for="Leave.LeaveType" class="form-control" asp-items="ViewBag.LeaveTypes"></select>
        <span asp-validation-for="Leave.LeaveType" class="text-danger"></span>
      </div>
      <div class="form-group mb-2">
        <label asp-for="Leave.StartDate" class="control-label"></label>
        <input asp-for="Leave.StartDate" class="form-control" type="date" />
        <span asp-validation-for="Leave.StartDate" class="text-danger"></span>
      </div>
      <div class="form-group mb-2">
        <label asp-for="Leave.EndDate" class="control-label"></label>
        <input asp-for="Leave.EndDate" class="form-control" type="date" />
        <span asp-validation-for="Leave.EndDate" class="text-danger"></span>
      </div>
      <div class="form-group">
        <input type="submit" value="Salveaza modificari" class="btn btn-primary" />
      </div>
    </form>
  </div>
</div>

@section Scripts {
  @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
  }
}
